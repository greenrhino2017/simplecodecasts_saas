<!DOCTYPE html>
<html>
<head>
  <title>greenRHINO | Dev-Match Community</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag "https://js.stripe.com/v2/", type: 'text/javascript' %>
  <link href="https://fonts.googleapis.com/css?family=Archivo+Black|Crushed" rel="stylesheet">
  <%= javascript_include_tag 'application' %>
  <%= tag :meta, :name => "stripe-key", :content => STRIPE_PUBLIC_KEY %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav class="navbar navbar-inverse navbar-static-top" role="navigation">
  	<div class="container">
  		<div class="navbar-header">
  			<button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#main-nav-collapse">
  				<span class="sr-only">Toggle navigation</span>
  				<span class="icon-bar"></span>
  				<span class="icon-bar"></span>
  				<span class="icon-bar"></span>
  			</button> <!-- / navbar-toggle -->
  			
  			<%= link_to root_path, class: 'navbar-brand' do %>
  			  <i class="fa fa-users"></i>
  			  greenRHINO
  			<% end %> <!-- Link to the Navbar Brand -->
  		</div> <!-- /.navbar-header -->
  
  		<div class="collapse navbar-collapse" id="main-nav-collapse">
  		  <div class="nav navbar-nav navbar-right">
  		    <% if current_user %>
  		      <%= button_to "Log Out", destroy_user_session_path, method: :delete, class: 'btn btn-warning navbar-btn btn-1' %>
  		    <% else %>
  		      <%= link_to "Log In", new_user_session_path, class: 'btn btn-primary navbar-btn btn-1', method: :get  %>
  		    <% end %>
  		  </div>
  		  
  			<ul class="nav navbar-nav navbar-right">
  				<li><%= link_to "About", about_path %></li>
  				<li><%= link_to "Contact Us", new_contact_path %></li>
  			</ul> <!-- / of navbar-right -->
  		</div> <!-- /.navbar-collapse -->
  	</div> <!-- /main.container -->
  </nav> <!-- /main nav div -->
  
<div class="container">
  
  <% flash.each do |key, value| %>
    <%= content_tag :div, value, class: "alert alert-#{key}"%>
  <% end %>
  
  <%= yield %>

  
</div>

<%= render "devise/registrations/footer_main" %> 

</body>
</html>
